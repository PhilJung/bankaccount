<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="600.0" prefWidth="900.0" stylesheets="@/res/css/appframe.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.philippejung.bankaccount.controller.MainFrameController">
    <children>
        <MenuBar>
            <menus>
                <Menu text="_Fichier">
                    <items>
                        <MenuItem onAction="#onMenuFileExit" text="_Quitter" />
                    </items>
                </Menu>
                <Menu text="_Aide">
                    <items>
                        <MenuItem onAction="#onMenuHelpAbout" text="_A propos" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <ToolBar VBox.vgrow="NEVER">
            <items>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#onToolbarWelcome" text="Accueil">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0">
                           <image>
                               <Image url="@/res/icons/home.png" />
                           </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#onToolbarImport" text="Importer">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0">
                           <image>
                               <Image url="@/res/icons/import.png" />
                           </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#onToolbarBudget" text="Budget">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0">
                           <image>
                               <Image url="@/res/icons/balance.png" />
                           </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Separator visible="false" />
                <Button contentDisplay="TOP" mnemonicParsing="false" text="Comptes">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0">
                           <image>
                               <Image url="@/res/icons/account.png" />
                           </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#onToolbarClassifier" text="Classement automatique">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0">
                           <image>
                               <Image url="@/res/icons/tag_mngmt.png" />
                           </image>
                        </ImageView>
                    </graphic>
                </Button>
            </items>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </ToolBar>
        <TabPane fx:id="tabPane" tabClosingPolicy="ALL_TABS" VBox.vgrow="ALWAYS">
            <tabs>
            </tabs>
        </TabPane>
        <HBox id="statusBar" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Pane HBox.hgrow="ALWAYS" />
                <Label text="Label" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </children>
</VBox>
