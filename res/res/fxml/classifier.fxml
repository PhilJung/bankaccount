<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0"
      stylesheets="@/res/css/import.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.philippejung.controller.ClassifierController">
    <children>
        <TableView fx:id="classifierTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn prefWidth="75.0" text="Si ces tests sont vrais">
                    <columns>
                        <TableColumn fx:id="detailConditionTestColumn" text="Test détail">
                            <cellValueFactory>
                                <PropertyValueFactory property="detailConditionTest"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="detailConditionValueColumn" text="Valeur détail">
                            <cellValueFactory>
                                <PropertyValueFactory property="detailConditionValue"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="amountConditionTestColumn" text="Test montant">
                            <cellValueFactory>
                                <PropertyValueFactory property="amountConditionTest"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="amountConditionValueColumn" text="Valeur montant">
                            <cellValueFactory>
                                <PropertyValueFactory property="amountConditionValue"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Alors forcer les valeurs suivantes">
                    <columns>
                        <TableColumn editable="false" text="Type">
                            <cellValueFactory>
                                <PropertyValueFactory property="newType"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn editable="true" text="Catégorie">
                            <cellValueFactory>
                                <PropertyValueFactory property="newCategory"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn editable="false" text="Moyen">
                            <cellValueFactory>
                                <PropertyValueFactory property="newWayOfPayment"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn editable="true" text="Compte">
                            <cellValueFactory>
                                <PropertyValueFactory property="newAccount"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="75.0" text="Arrêter">
                            <cellValueFactory>
                                <PropertyValueFactory property="stopFurtherClassification"/>
                            </cellValueFactory>
                        </TableColumn>

                    </columns>
                </TableColumn>
            </columns>
        </TableView>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</VBox>
